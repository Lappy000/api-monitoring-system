# Environment Variables for API Monitor
# Copy to .env and set actual values

# Application Environment
APP_ENV=development  # development, staging, production

# Configuration File Path
CONFIG_PATH=config/config.yaml

# Database URL (overrides config file)
DATABASE_URL=sqlite+aiosqlite:///./data/api_monitor.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/api_monitor

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Email Configuration (if not in config file)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=api-monitor@example.com
EMAIL_TO=admin@example.com

# Webhook URL (if not in config file)
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Telegram (if not in config file)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# API Authentication
API_KEY=your-secret-api-key-change-this-in-production

# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090